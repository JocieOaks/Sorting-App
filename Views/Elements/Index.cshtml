@model IEnumerable<Sorting_App.Models.Element>

<table class="list-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td class="col-sm-10">
                @if (item.Image != null)
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(item.Image)" class="thumbnail" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Elements" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-controller="Elements" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-controller="Elements" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
