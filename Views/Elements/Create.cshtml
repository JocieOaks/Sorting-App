@model Sorting_App.Models.Element

@{
    ViewData["Title"] = "Create";
}
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="~/js/site.js"></script>

<h1>Create</h1>

<h4>Element</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="List" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" accept="image/png" name="image" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input class="form-control" name="tagsString"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-route-listID="@Model.List.ID"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ElementLists" asp-action="Details" asp-route-id="@Model.List.ID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
