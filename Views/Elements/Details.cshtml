@model Sorting_App.Models.Element

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Element</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        @if (Model.Image != null)
        {
            <dd class = "col-sm-10">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" class="img-fluid"/>
            </dd>
        }
        <dt class ="col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Tags != null)
                @foreach(ElementTag tag in Model.Tags)
                {
                    @Html.DisplayFor(x => tag.Tag)
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index" asp-route-id="@Model?.List.ID">Back to List</a>
</div>
